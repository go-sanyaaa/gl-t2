extends layouts/main

block variables
    -
        var title = "Датчик спокойствия | GoodLine"
        var receive = [
            {img:"./img/icons/camera.svg", title: "Покупка"},
            {img:"./img/icons/ras.svg", title: "Рассрочка"},
            {img:"./img/icons/packet-1.svg", title: "“Все под контролем”", subtitle: "Пакет"},
            {img:"./img/icons/packet-2.svg", title: "“Тысяча пятьсот”", subtitle: "Пакет"}
        ]

block content
    div.container
        div.section
            div.section__body.poster
                div.poster__data
                    div.poster__header
                        img.poster__header-icon(src="data:image/svg+xml;base64,")
                    div.poster__desc
                        p.poster__desc-text.text--bold
                            | Комплекс из камеры <br> и мобильного приложения, <br> который помогает <br> в любой момент <br> убедиться, что с близкими <br> и домом всё в порядке.
                img.poster__img(src="./img/poster.png")
        div.section
            div.section__body
                gl-products
        div.section.section--center(style={marginTop: '60px'})
            h2.section__header Приобрести
            div.section__body
                div.cards
                    each card in receive
                        div.card-item.card-item--small
                            div.card-item__wrapper
                                div.card-item__icon
                                    img.card-item__icon-img(src="" + card.img)
                                div.card-item__text
                                    if card.subtitle
                                        span.card-item__text-span.text--bold= card.subtitle
                                    p.card-item__text-p.text--bold= card.title
        div.section
            div.section__body
                gl-feedback
        section.section.section--center(style={marginTop: '120px'})
            h2.section__header Отзывы
            div.section__body
                gl-reviews